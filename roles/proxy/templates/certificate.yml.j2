apiVersion: cert-manager.io/v1
kind: Certificate
metadata:
  name: {{ proxy_certificate_name }}
  namespace: {{ proxy_certificate_namespace }}
spec:
  secretName: {{ proxy_certificate_name }}
  duration: 87600h
  privateKey:
    algorithm: RSA
    size: 2048
  issuerRef:
    kind: Issuer
    group: cert-manager.io
    name: {{ proxy_certificate_ca_issuer }}
  dnsNames:
  - {{ proxy_fqdn }}
